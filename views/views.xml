<openerp>
  <data>
    <!-- explicit list view definition -->
    <!-- Project View Definition -->
    <record model="ir.ui.view" id="project_list">
      <field name="name">realty project list</field>
      <field name="model">realty.project</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="project_form">
      <field name="name">realty project form</field>
      <field name="model">realty.project</field>
      <field name="arch" type="xml">
        <form string="Project Form">
          <group colspan="4">
              <group colspan="2" col="2">
                  <separator string="General Setting" colspan="2"/>
                  <field name="code"/>
                  <field name="name"/>
              </group>
              <group colspan="2" col="2">
                  <separator string="Area Setting" colspan="2"/>
                  <field name="floor_area"/>
                  <field name="plot_ratio"/>
              </group>
              <notebook colspan="4">
                  <page string="Description">
                      <field name="description"/>
                  </page>
              </notebook>
          </group>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="product_list">
      <field name="name">realty product list</field>
      <field name="model">realty.product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="account_list">
      <field name="name">realty account list</field>
      <field name="model">realty.account</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="realty.action_window0101">
      <field name="name">Project Setting</field>
      <field name="res_model">realty.project</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="realty.action_window0201">
      <field name="name">Product Setting</field>
      <field name="res_model">realty.product</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="realty.action_window0202">
      <field name="name">Account Setting</field>
      <field name="res_model">realty.account</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="realty.action_server">
      <field name="name">realty.product</field>
      <field name="model_id" ref="model_realty_product"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    <menuitem name="Realty" id="realty.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Project" id="realty.menu_1" parent="realty.menu_root"/>
    <menuitem name="Settings" id="realty.menu_2" parent="realty.menu_root"/>
    <!-- actions -->
    <menuitem name="Project List" id="realty.menu_1_list" parent="realty.menu_1"
              action="realty.action_window0101"/>
    <menuitem name="Product" id="realty.menu2_01" parent="realty.menu_2"
              action="realty.action_window0201"/>
    <menuitem name="Account" id="realty.menu2_02" parent="realty.menu_2"
              action="realty.action_window0202"/>
  </data>
</openerp>
